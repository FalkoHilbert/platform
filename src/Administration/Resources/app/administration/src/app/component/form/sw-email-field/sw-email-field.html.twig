{% block sw_email_field %}
<mt-email-field
    v-if="!deprecated"
    v-bind="$attrs"
    :model-value="compatValue"
    @update:model-value="handleUpdateModelValue"
>
    <template
        v-for="(index, name) in getSlots()"
        #[name]="data"
    >
        <slot
            :name="name"
            v-bind="data"
        >
        </slot>
    </template>
    <slot></slot>
</mt-email-field>
{% endblock %}

{% block sw_email_field_deprecated %}
{% endblock %}

{# Deprecated component #}
<sw-email-field-deprecated
    v-else
    v-bind="$attrs"
    :value="value"
>
    <template
        v-for="(index, name) in getSlots()"
        #[name]="data"
    >
        <slot
            :name="name"
            v-bind="data || {}"
        >
        </slot>
    </template>
</sw-email-field-deprecated>
