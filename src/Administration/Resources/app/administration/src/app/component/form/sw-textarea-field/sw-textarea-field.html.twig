{# New mt-textarea component #}
{% block sw_textarea_field %}
<mt-textarea
    v-bind="$attrs"
    v-model="realValue"
    :placeholder="placeholder"
>
    <template
        v-for="(index, name) in getSlots()"
        #[name]="data"
    >
        <slot
            :name="name"
            v-bind="data || {}"
        >
        </slot>
    </template>
</mt-textarea>
{% endblock %}

