{% block sw_checkbox_field %}
<mt-checkbox
    v-if="!deprecated"
    v-bind="$attrs"
    :checked="compatValue"
    @update:checked="handleUpdateChecked"
>
    <template
        v-for="(index, name) in getSlots()"
        #[name]="data"
    >
        <slot
            :name="name"
            v-bind="data"
        >
        </slot>
    </template>
    <slot></slot>
</mt-checkbox>
{% endblock %}

{# Deprecated component #}
<sw-checkbox-field-deprecated
    v-else
    v-bind="$attrs"
    :value="value"
>
    <template
        v-for="(_index, name) in getSlots()"
        #[name]="data"
    >
        <slot
            :name="name"
            v-bind="data || {}"
        >
        </slot>
    </template>
</sw-checkbox-field-deprecated>
