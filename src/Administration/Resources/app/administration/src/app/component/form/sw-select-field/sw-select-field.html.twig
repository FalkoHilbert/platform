{% block sw_select_field %}
<mt-select
    v-if="!deprecated"
    v-bind="$attrs"
    :options="options"
/>
{% endblock %}

{# Deprecated component #}
<sw-select-field-deprecated
    v-else
    v-bind="$attrs"
    :options="options"
>
    <template
        v-for="(index, name) in getSlots()"
        #[name]="data"
    >
        <slot
            :name="name"
            v-bind="data"
        >
        </slot>
    </template>
    <template #default>
        <slot></slot>
    </template>
</sw-select-field-deprecated>
